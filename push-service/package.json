{
  "name": "arkade-push-service",
  "version": "1.0.0",
  "description": "Cloudflare Worker for Web Push notifications for Arkade Wallet",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "db:create": "wrangler d1 create arkade-push",
    "db:migrate": "wrangler d1 execute arkade-push --file=./src/db/schema.sql",
    "db:migrate:local": "wrangler d1 execute arkade-push --local --file=./src/db/schema.sql",
    "generate-vapid": "node scripts/generate-vapid.js"
  },
  "keywords": [
    "web-push",
    "push-notifications",
    "cloudflare-workers",
    "arkade",
    "lightning-network"
  ],
  "author": "Arkade",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241022.0",
    "@types/web-push": "^3.6.3",
    "typescript": "^5.6.3",
    "wrangler": "^3.82.0"
  },
  "dependencies": {
    "web-push": "^3.6.7"
  }
}
