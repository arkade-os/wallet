  "homepage": ".",
  "dependencies": {
    "@ionic/react": "^8.4.0",
    "@ionic/react-router": "^8.4.0",
    "@paulmillr/qr": "^0.3.0",
    "@scure/base": "^1.1.6",
    "@scure/bip32": "^1.6.2",
    "@scure/bip39": "^1.5.4",
    "@sentry/react": "^9.5.0",
    "decimal.js": "^10.4.3",
