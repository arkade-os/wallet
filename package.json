{
  "name": "arkade",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@arkade-os/sdk": "^0.1.1",
    "@dotmind/react-use-pwa": "^1.0.4",
    "@ionic/react": "^8.5.6",
    "@scure/base": "^1.2.5",
    "@scure/bip32": "^1.7.0",
    "@scure/bip39": "^1.6.0",
    "@sentry/react": "^9.15.0",
    "decimal.js": "^10.5.0",
    "dexie": "^4.0.11",
    "dexie-react-hooks": "^1.1.7",
    "nostr-tools": "^2.12.0",
    "qr": "^0.4.2",
    "qs": "^6.14.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "pnpm git-info; pnpm build:worker; vite",
    "build": "pnpm git-info; pnpm build:worker; vite build",
    "build:worker": "vite build -c vite.worker.config.ts",
    "test": "vitest",
    "lint": "eslint --ext .ts,.tsx src",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "git-info": "node scripts/git-commit-info.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/node": "^22.15.12",
    "@types/qs": "^6.9.18",
    "@types/react": "^18.3.21",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "vite": "^6.3.5",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^1.6.1"
  },
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=14",
    "pnpm": ">=8"
  }
}
