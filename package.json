  "scripts": {
    "prepare": "husky install",
    "start": "pnpm git-info; vite",
    "build": "pnpm git-info; vite build",
    "test": "vitest",
    "lint": "eslint --ext .ts,.tsx src",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "git-info": "echo export const gitCommit = \\'$(cat .git/refs/heads/master | cut -c 1-8)\\' > src/_gitCommit.ts"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/node": "^22.8.7",
    "@types/qs": "^6.9.18",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
